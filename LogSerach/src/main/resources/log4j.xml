<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

        
	<appender name="debug"
		class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5MB" />
		<param name="maxBackupIndex" value="2" />
		<param name="File" value="logs/edart.log" />
		<param name="threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{DATE} %-5p %-15c{1} : %m%n" />
		</layout>
	</appender>



	<appender name="info"
		class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5MB" />
		<param name="maxBackupIndex" value="5" />
		<param name="File" value="${catalina.home}/logs/pluto.log" />
		<param name="threshold" value="INFO" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{DATE} %-5p %-15c{1} : %m%n" />
		</layout>
	</appender>

	<appender name="error"
		class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5MB" />
		<param name="maxBackupIndex" value="5" />
		<param name="File" value="${catalina.home}/logs/pluto.error.log" />
		<param name="threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{DATE} %-5p %-15c{1} : %m%n" />
		</layout>
	</appender>

	<appender name="all" class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="15MB" />
		<param name="maxBackupIndex" value="5" />
		<param name="File" value="${catalina.home}/logs/pluto.log" />
		<param name="threshold" value="trace" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern"
				value="%d{DATE} %-5p %-15c{1} : %m%n" />
		</layout>
	</appender>

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
        <param name="threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
		</layout>
	</appender>
	
	<appender name="nodeAccess" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="15MB" />
        <param name="maxBackupIndex" value="5" />
        <param name="File" value="${catalina.home}/logs/pluto.charon.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"  value="%d{DATE} %-5p : %m%n" />
        </layout>
    </appender>
    
    <appender name="userAccess" class="org.apache.log4j.RollingFileAppender">
        <param name="maxFileSize" value="15MB" />
        <param name="maxBackupIndex" value="5" />
        <param name="File" value="${catalina.home}/logs/pluto.access.log" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern"  value="%d{DATE} %-5p : %m%n" />
        </layout>
    </appender>
    
    <category name="nodeAccess" additivity="false">
    	 <priority value="info"/>
    	<appender-ref ref="nodeAccess" />
    </category>
    
    <category name="userAccess" additivity="false">
    	 <priority value="info"/>
    	<appender-ref ref="userAccess" />
    </category>
    

	<root>
		
		<appender-ref ref="info" />
		<!-- <appender-ref ref="console" /> -->
	<!-- 	<appender-ref ref="debug" />
		   <appender-ref ref="debug" /> -->
		<!--    <appender-ref ref="error" />-->
	</root>
</log4j:configuration>

